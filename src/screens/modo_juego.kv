#:kivy 1.0
<ModoJuegoScreen>:
    FloatLayout:
        canvas.before:
            BorderImage:
#                source: app.get_path_resources('common','inicio_fondo.png')
                border:10,10,10,10
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            adaptive_height: False
            #md_bg_color: app.theme_cls.primary_color
            Label:
                id: titulo
                text: "Testo"

        BoxLayout:
            spacing: 25
            adaptive_height: False
            Button:
                width: 250
                text: 'Observar'
                #on_press: app.change_screen('salvaPantallas')
            Button:
                text: 'Interactuar'
            Button:
                text: 'Aprender'
