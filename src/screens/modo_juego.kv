#:kivy 1.0
<ModoJuegoScreen>:
    observar_boton: obs_btn
    aprender_boton: apr_btn
    interactuar_boton: int_btn
    background:bcg
    FloatLayout:
        Image:
            id:bcg
            source: app.get_path_resources('espa単ol','modo_juego.png')
            pos: self.pos
            size: self.size
        Image:
            id:obs_btn
            source:app.get_path_resources('espa単ol','boton_observar_down.png')
            size_hint: .29, .18
            pos_hint: {'x': .65, 'y': .55}
            border:5,5,5,5
 
        Image:
            id:apr_btn
            source:app.get_path_resources('espa単ol','boton_aprender_normal.png')
            size_hint: .29, .18
            pos_hint: {'x': .65, 'y': .35}
            border:5,5,5,5
        
        Image:
            id:int_btn
            source:app.get_path_resources('espa単ol','boton_interactuar_normal.png')
            size_hint: .29, .18
            pos_hint: {'x': .65, 'y': .15}
            border:5,5,5,5