#:kivy 1.0
<ModoJuegoScreen>:
    BoxLayout:
        padding:25
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            adaptive_height: False
            #md_bg_color: app.theme_cls.primary_color
            Label:
                id: titulo
                text: root.get_data()['titulo_pantalla']

        BoxLayout:
            spacing: 25
            adaptive_height: False
            Button:
                width: 250
                text: 'Observar'
                #on_press: app.change_screen('salvaPantallas')
                on_release:root.app_ins()
            Button:
                text: 'Interactuar'
            Button:
                text: 'Aprender'
