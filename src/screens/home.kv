#:kivy 1.0
<HomeScreen>:
    esp_button: esp_btn
    en_button: en_btn
    FloatLayout:
        Image:
            source: app.get_path_resources('common','home_background.png')
            pos: self.pos
            size: self.size

        Image:
            id:esp_btn
            source: app.get_path_resources("images_config","button_spanish_down.png", lang_opt="spanish")
            size_hint: .29, .18
            pos_hint: {'x': .038, 'y': .1}
            border:5,5,5,5
 
        Image:
            id:en_btn
            source: app.get_path_resources("images_config","button_english_normal.png", lang_opt="english")
            size_hint: .29, .18
            pos_hint: {'x': .35, 'y': .1}
            border:5,5,5,5
