#:kivy 1.0
<MenuEsp>:
    BoxLayout:
        padding:25
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            adaptive_height: False
            #md_bg_color: app.theme_cls.primary_color
            Image:
                source: root.logo_colegio
                size: self.texture_size
            Label:
                id: titulo
                text: root.get_data()['titulo_pantalla']

        BoxLayout:
            spacing: 25
            adaptive_height: False
            Button:
                width: 250
                text: 'Observar'
                on_press: app.change_screen('salvaPantallas')
            Button:
                text: 'Interactuar'
            Button:
                text: 'Aprender'
