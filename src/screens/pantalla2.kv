<MenuEsp>:
    MDBoxLayout:
        padding:25
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: False
            md_bg_color: app.theme_cls.primary_color
            Image:
                source: root.logo_colegio
                size: self.texture_size
            MDLabel:
                id: titulo
                text: root.get_data()['titulo_pantalla']

        MDBoxLayout:
            spacing: 25
            adaptive_height: False
            MDRoundFlatButton:
                width: 250
                text: 'Observar'
                on_press: app.change_screen('salvaPantallas')
            MDRoundFlatButton:
                text: 'Interactuar'
            MDRoundFlatButton
                text: 'Aprender'
